{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "*": ["./src/*"],
            "shared/*": ["./src/shared/*"],
            "widgets/*": ["./src/widgets/*"],
            "features/*": ["./src/features/*"],
            "entities/*": ["./src/entities/*"]
        },
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "types": ["node"]
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": [
        "./config/jest/setupTests.ts",
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ]
}
