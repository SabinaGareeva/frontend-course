{
    "extends": "stylelint-config-standard-scss",
    "rules": {
        "indentation": [4],
        "selector-class-pattern": null,
        "rule-empty-line-before": [
            "always-multi-line",
            {
                "except": ["first-nested"],
                "ignore": ["after-comment"]
            }
        ],
        "number-max-precision": null
    }
}
